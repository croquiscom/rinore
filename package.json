{
  "name": "rinore",
  "version": "0.9.0",
  "description": "Rich Node.js REPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/croquiscom/rinore.git"
  },
  "keywords": [
    "repl"
  ],
  "author": "Sangmin Yoon <sangmin.yoon@croquis.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/croquiscom/rinore/issues"
  },
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build",
    "build": "rimraf lib && tsc -p src/tsconfig.build.json",
    "lint": "eslint --ext .js,.ts .",
    "test:type": "tsc --noEmit",
    "test:unit": "mocha --require ts-node/register/transpile-only -t 8000 --exit 'test/*.ts'",
    "test": "npm run test:type && npm run lint && npm run test:unit --",
    "test:cov": "nyc npm run test",
    "prepare": "husky install"
  },
  "bin": {
    "rinore": "./bin/rinore",
    "rinore-remote": "./bin/rinore-remote"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "bluebird": "^3.7.2",
    "diff": "^5.0.0",
    "lodash": "^4.17.21",
    "node-watch": "^0.7.3",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@croquiscom/eslint-config": "^1.8.0",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.3.0",
    "@types/diff": "^5.0.2",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.16",
    "@types/yargs": "^17.0.8",
    "chai": "^4.3.6",
    "coffeescript": "^2.6.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "post-merge-install": "^0.4.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  }
}
