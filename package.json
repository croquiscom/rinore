{
  "name": "rinore",
  "version": "0.6.0",
  "description": "Rich Node.js REPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/croquiscom/rinore.git"
  },
  "keywords": [
    "repl"
  ],
  "author": "Sangmin Yoon <sangmin.yoon@croquis.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/croquiscom/rinore/issues"
  },
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build",
    "build": "rimraf lib && tsc -p src/tsconfig.build.json",
    "lint": "eslint --ext .js,.ts .",
    "test:type": "tsc --noEmit",
    "test:unit": "mocha --require ts-node/register/transpile-only -t 8000 --exit 'test/*.ts'",
    "test": "npm run test:type && npm run lint && npm run test:unit --",
    "test:cov": "nyc npm run test"
  },
  "bin": {
    "rinore": "./bin/rinore",
    "rinore-remote": "./bin/rinore-remote"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "bluebird": "^3.7.2",
    "diff": "^5.0.0",
    "lodash": "^4.17.20",
    "node-watch": "^0.7.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@croquiscom/eslint-config": "^1.0.5",
    "@types/bluebird": "^3.5.33",
    "@types/chai": "^4.2.14",
    "@types/diff": "^4.0.2",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "@types/yargs": "^15.0.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chai": "^4.2.0",
    "coffeescript": "^2.5.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "post-merge-install": "^0.4.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "post-merge-install",
      "post-rebase": "post-merge-install"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  }
}
