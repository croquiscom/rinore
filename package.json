{
  "name": "rinore",
  "version": "1.0.0",
  "description": "Rich Node.js REPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/croquiscom/rinore.git"
  },
  "keywords": [
    "repl"
  ],
  "author": "Sangmin Yoon <simon.yoon@kakaostyle.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/croquiscom/rinore/issues"
  },
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build",
    "build": "rimraf lib && tsc -p src/tsconfig.build.json",
    "lint": "eslint --ext .js,.ts .",
    "test:type": "tsc --noEmit",
    "test:unit": "mocha --require ts-node/register/transpile-only -t 8000 --exit 'test/*.ts'",
    "test": "npm run test:type && npm run lint && npm run test:unit --",
    "test:cov": "nyc npm run test",
    "prepare": "husky install"
  },
  "bin": {
    "rinore": "./bin/rinore",
    "rinore-remote": "./bin/rinore-remote"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "bluebird": "^3.7.2",
    "diff": "^5.1.0",
    "lodash": "^4.17.21",
    "node-watch": "^0.7.3",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@croquiscom/eslint-config": "^2.0.0",
    "@types/bluebird": "^3.5.38",
    "@types/chai": "^4.3.4",
    "@types/diff": "^5.0.2",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.11",
    "@types/yargs": "^17.0.16",
    "chai": "^4.3.7",
    "coffeescript": "^2.7.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "post-merge-install": "^0.4.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "10.7",
    "typescript": "^4.9.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint",
    "**/*": "prettier --write --ignore-unknown"
  }
}
